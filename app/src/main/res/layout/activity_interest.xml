<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyLight"
    android:orientation="vertical"
    tools:context="com.johnnyup.erssavingsapp.InterestActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/open_drawer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/greyLight"
            android:onClick="goBack"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/open_drawer"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:text="@string/interests"
            android:textSize="18sp"
            style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
            android:textColor="@color/darkBlue"
            />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:cardElevation="1dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="14dp"
            android:stretchColumns="1">

            <TableRow android:paddingVertical="10dp" android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
                    android:text="@string/investments" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
                    android:text="@string/amount" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
                    android:textAlignment="center"
                    android:text="@string/interests" />
            </TableRow>

        </TableLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/interest_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@color/greyLight" />

</LinearLayout>